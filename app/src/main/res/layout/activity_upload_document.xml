<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Accounts.MyDocuments.UploadDocumentActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar.AppBarOverlay">

        <include layout="@layout/toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/interval_margin">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/attached_pdf_indicator"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.pdf"
                style="@style/itemTextContentStyle"
                android:layout_margin="@dimen/interval_margin"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            style="@style/default_btn_style"
            android:text="Choose Document"
            android:background="@drawable/btn_background_green_color"
            android:layout_marginStart="@dimen/interval_margin"
            android:layout_marginEnd="@dimen/interval_margin" />

        <Button
            android:layout_width="match_parent"
            style="@style/default_btn_style"
            android:text="Delete Attached File"
            android:background="@drawable/background_red_color"
            android:layout_marginStart="@dimen/interval_margin"
            android:layout_marginEnd="@dimen/interval_margin"/>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>