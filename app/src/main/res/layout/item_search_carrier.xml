<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/interval_margin"
    app:cardCornerRadius="@dimen/interval_margin"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/interval_margin"
            android:layout_height="match_parent"
            android:background="@color/blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/small_margin"
            android:paddingLeft="@dimen/default_margin"
            android:paddingTop="@dimen/small_margin">

            <TextView
                android:id="@+id/txtCompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_margin"
                android:maxLines="1"
                android:text="Westwood Motors LLC"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/txtMemberId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_margin"
                android:maxLines="1"
                android:text="#123456"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_font_size" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/interval_margin"
                android:maxLines="1"
                android:text="Carrollton , TX"
                android:textColor="@android:color/black"
                android:textSize="@dimen/medium_font_size" />


        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
