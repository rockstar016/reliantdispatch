<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:minWidth="300dp"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginBottom="@dimen/default_margin"
    android:layout_marginStart="@dimen/default_btn_height"
    android:layout_marginEnd="@dimen/default_btn_height"

    app:cardElevation="4dp"
    tools:context=".CommonActivity.Damage.DamageListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/damageList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/interval_margin"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btCancel"
            style="@style/default_btn_style"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/interval_margin"
            android:background="@drawable/btn_background_red_color"
            android:text="Cancel"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</android.support.v7.widget.CardView>