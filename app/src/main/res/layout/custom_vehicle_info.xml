<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/interval_margin"
    android:paddingBottom="@dimen/interval_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

            <TextView
                android:id="@+id/year"
                style="@style/vehicleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="year" />

            <TextView
                android:id="@+id/make"
                style="@style/vehicleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="make" />

            <TextView
                android:id="@+id/model"
                style="@style/vehicleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="model" />
        </LinearLayout>

        <TextView
            android:id="@+id/damageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:padding="3dp"
            android:text="No damages" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtDamages"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/default_margin"/>
        <ImageView
            android:id="@+id/carDetail"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_gravity="right|bottom"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/car" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="VIN#:"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/vinTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text=""
            android:textSize="@dimen/medium_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Lot#:"
            android:textSize="@dimen/medium_font_size" />

        <TextView
            android:id="@+id/lotTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text=""
            android:textSize="@dimen/medium_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/detailBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/default_btn_style"
            android:background="@drawable/vehicle_btn_background"
            android:text="Details"
            android:textAllCaps="false"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/medium_font_size" />

        <Button
            android:id="@+id/inspectionBtn"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/default_margin"
            style="@style/default_btn_style"
            android:layout_weight="1"
            android:visibility="visible"
            android:background="@drawable/vehicle_btn_background"
            android:text="Inspection"
            android:textAllCaps="false"
            android:textColor="@color/black_text_color"
            android:textSize="@dimen/medium_font_size" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_margin"
        android:background="@color/line_background" />
</LinearLayout>