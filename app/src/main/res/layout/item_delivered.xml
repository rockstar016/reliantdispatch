<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    android:layout_margin="@dimen/interval_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/loadID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Load ID: "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medium_font_size"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Vehicles"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/medium_font_size"
                    android:layout_marginBottom="5dp"
                    android:maxLines="1"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/interval_margin"
                    android:columnCount="2">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pickup_icon"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Within 25 miles of Irvine - CA - 92620"
                        style="@style/itemTextContentStyle" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/delivery_icon"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/itemTextContentStyle"
                        android:text="Within 25 miles of Dallas - TX - 75201 "
                        />
                </GridLayout>
            </LinearLayout>
            <View
                android:layout_width="7dp"
                android:layout_height="match_parent"
                android:background="@color/card_yellow"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|end"
                android:id="@+id/chkSelection"/>
        </FrameLayout>
    </android.support.v7.widget.CardView>
