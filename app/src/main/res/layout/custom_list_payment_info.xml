<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/customInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment to Carrier" />
            <TextView
                style="@style/customInfoStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="$ 50 (Cash)" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/customInfoStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Pickup to Carrier" />
            <TextView
                style="@style/customInfoStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin"
                android:text="$20 (Company Check)" />
        </LinearLayout>

        <TextView
            style="@style/customInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash, On Pickup" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/customInfoStyle"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/check_bk_color"
                android:text="Shipper will Pay Carrier: "/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:layout_marginLeft="@dimen/interval_margin"
                android:text="$ 30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Auto Calculated)"
                android:layout_marginLeft="@dimen/interval_margin"/>
        </LinearLayout>

        <TextView
            style="@style/customInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Immediately, Delivery" />

        <TextView
            style="@style/customInfoStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment will be made with Company Check"/>
    </LinearLayout>
</FrameLayout>