<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Authority.Register.SecondRegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/default_layout_style">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/registerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start a Free Membership Today!" />
            <TextView
                style="@style/registerSubTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reference Information" />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/yearEstablished"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/interval_margin">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Year Established *"
                    style="@style/editTextStyle" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/interval_margin"
                android:id="@+id/docketMC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Docket MC # *"
                    style="@style/editTextStyle" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/interval_margin"
                android:id="@+id/usDOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="US DOT #"
                    style="@style/editTextStyle" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/spinnertitle"
                android:text="Company Description *"
                android:layout_marginTop="@dimen/default_margin" />
            <EditText
                android:id="@+id/companyDesc"
                style="@style/multiLineEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equipment and Route Information"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/default_margin"
                    android:textSize="@dimen/medium_font_size"/>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/interval_margin"
                android:id="@+id/truckNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Numbers of Trucks *"
                    style="@style/editTextStyle" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                style="@style/spinnertitle"
                android:text="Equipment Description *"
                android:layout_marginTop="@dimen/default_margin" />
            <EditText
                android:id="@+id/equipDesc"
                style="@style/multiLineEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/spinnertitle"
                android:text="Route Description *"
                android:layout_marginTop="@dimen/default_margin" />
            <EditText
                android:id="@+id/routeDesc"
                style="@style/multiLineEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/default_margin"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</FrameLayout>
