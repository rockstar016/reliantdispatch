<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:actionMenuTextColor">@android:color/white</item>-->
        <!--<item name="android:textColorPrimary">@android:color/white</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="primaryTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="addInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="inputLayoutStyle">
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">@dimen/interval_margin</item>
        <item name="android:layout_marginRight">@dimen/interval_margin</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editTextStyle">
        <item name="android:paddingTop">@dimen/interval_margin</item>
        <item name="android:paddingBottom">@dimen/small_margin</item>
        <item name="android:paddingLeft">@dimen/interval_margin</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="vehicleTextStyle">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="default_text_style">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="linkButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="actionbarTitle">
        <item name="android:textAlignment">gravity</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blueBorderButtonStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/import_order_background</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <style name="blackBorderlessButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:padding">@dimen/default_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="default_layout_style">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">@dimen/interval_margin</item>
        <item name="android:layout_marginRight">@dimen/interval_margin</item>
    </style>


    <style name="customInfoStyle">
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="default_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/default_btn_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="spinnertitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="spinnerstyle" parent="Base.Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @style/TextAppearance.AppCompat.Widget.TextView.SpinnerItem
        </item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="multiLineEditTextStyle">
        <item name="android:background">@drawable/input_layout_bk</item>
        <item name="android:minLines">5</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="registerTitle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="registerSubTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black_text_color</item>
    </style>

    <style name="search_title_style">
        <item name="android:background">@color/search_title_bk</item>
        <item name="android:paddingTop">@dimen/interval_margin</item>
        <item name="android:paddingBottom">@dimen/interval_margin</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="itemTextTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginRight">@dimen/interval_margin</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="itemTextContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>]
        <item name="android:textColor">@color/black_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

</resources>
